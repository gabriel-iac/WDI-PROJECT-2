<p id="notice"><%= notice %></p>










<div class="row">
<ul class="tabs" data-tab role="tablist">
  <li class="tab-title active" role="presentation"><a href="#panel2-1" role="tab" tabindex="0" aria-selected="true" aria-controls="panel2-1">Profile Details</a></li>
  <li class="tab-title" role="presentation"><a href="#panel2-2" role="tab" tabindex="0" aria-selected="false" aria-controls="panel2-2">Tab 2</a></li>
  <li class="tab-title" role="presentation"><a href="#panel2-3" role="tab" tabindex="0" aria-selected="false" aria-controls="panel2-3">Tab 3</a></li>
  <li class="tab-title" role="presentation"><a href="#panel2-4" role="tab" tabindex="0" aria-selected="false" aria-controls="panel2-4">Tab 4</a></li>
</ul>
<div class="tabs-content">
  <section role="tabpanel" aria-hidden="false" class="content active" id="panel2-1">
    <p>
      <strong>Name:</strong>
      <%= @user.name %>
    </p>
    <p>
      <%= image_tag @user.user_image.url %>
    </p>
    <p>
      <strong>Username:</strong>
      <%= @user.username %>
    </p>
    <p>
      <strong>Bio:</strong>
      <%= @user.bio %>
    </p>
    <% if @user == current_user %>
    <%= link_to 'Edit', edit_user_path(@user), class: "button" %> |
    <%= link_to 'Back', users_path, class: "button" %>
    <% end %>
  </section>
  <section role="tabpanel" aria-hidden="true" class="content" id="panel2-2">
    <h2>User Projects</h2>
    <div class="row home-block">
      <% @user.projects.each do |project|%>
      <% if project.comments.size == 2 %>
      <div class=" large-4 columns project-container"> 
       <div class=" project-card">
         <%= image_tag project.project_image.display.url %>
         <div class="project-content">
           <h4><%=link_to project.name, project %></h4>
           <h6><%= project.creator %></h6>
           <h4><%=link_to project.category.name, project.category %></h4>
           <p><%= project.description.first(200) %>...</p>
          
           <p><%=number_to_currency project.pledges.sum('amount') %> 
            to <%=number_to_currency project.goal %> pledged</p>
          </div>
        </div>
      </div>
</div>
      <!-- https://d3mlfyygrfdi2i.cloudfront.net/683f/Greg_Girard_2.jpg -->
      <% end %>
      <% end %>

  </section>
  <section role="tabpanel" aria-hidden="true" class="content" id="panel2-3">
    <h2>User Comments</h2>
  </section>
  <section role="tabpanel" aria-hidden="true" class="content" id="panel2-4">
    <h2>Fourth panel content goes here...</h2>
  </section>
</div>
</div>