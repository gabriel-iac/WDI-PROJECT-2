<div class="row home-block">
<h1>Staff Picks</h1>
<hr>
  <% @projects.first(3).each do |project|%>
  <% if project.comments.size > -1 %>
  <div class=" large-4 columns project-container"> 
     <div class=" project-card">
       <%= image_tag project.project_image.display.url %>
       <div class="project-content">
         <h4><%=link_to project.name, project %></h4>
         <em><h7 class="subheader"><%= project.creator %></h7></em>
         <p><em><%=link_to project.category.name, project.category %></em></p>
         <p><%= project.description.first(200) %>...</p>
         <p><%=number_to_currency project.pledges.sum('amount') %> 
          to <%=number_to_currency project.goal %> Pledged</p>
          <p>Created by: <%= link_to project.user.try(:username), project.user  %></p>
        </div>
      </div>
    </div>

  <% else %>


  <% end %>
  <% end %>
</div>


