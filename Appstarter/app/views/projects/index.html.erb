<p id="notice"><%= notice %></p>

<h1>Listing Projects</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Creator</th>
      <th>Description</th>
      <th>Image</th>
      <th>Deadline</th>
      <th>Goal</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

 </div>
  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%=link_to project.name, project %></td>
        <td><%= project.creator %></td>
        <td><%= project.description %></td>
        <td>Tags: <%= raw project.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %></td>
        <!-- <td><%= image_tag project.image %></td> -->
        <td><%= image_tag project.project_image.display.url %></td>
        <td><%= project.deadline %></td>
        <td><%=number_to_currency project.goal %></td>
        <td><%= link_to project.user.try(:username), project.user %></td>
        <% if project.user == current_user %>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

