<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @project.name %>
</p>

<p>
  <strong>Creator:</strong>
  <%= @project.creator %>
</p>

<p>
  <strong>Description:</strong>
  <%= @project.description %>
</p>


<p>
  <b>Image:</b>
  <%= image_tag @project.project_image.url %>
</p>

<p>
  <strong>Deadline:</strong>
  <%= @project.deadline %>
</p>

<p>
  <strong>Goal:</strong>
  <%= @project.goal %>
</p>

<p>
  <strong>User:</strong>
  <%= link_to @project.user.try(:username), @project.user  %>
</p>

<!-- <p>
  
  <%= @project.rewards %>
</p>
-->
<% @project.rewards.each do |reward| %>
<ul>
  <strong>Rewards:</strong>
  <li><%= link_to reward.title %></li>

  <li>Pledge<%= reward.value %>or more </li>

  <li><strong>Quantity:</strong>Limited only<%= reward.quantity%>Avaible</li>

  <li><strong>Description:</strong><%= reward.description%></li>

  <li> <strong>Delivery:</strong><%= reward.estimated_delivery %></li>

</ul>
<% end %>

<% if @project.goal - @project.pledges.sum('amount') > 0 %>
<h2><%= @project.goal - @project.pledges.sum('amount') %> </h2>
<h4>needed for this project to be successful.</h4>
<% end -%>

<h2><%= @project.pledges.sum('amount') %> on <%= @project.goal %> pledged</h2>
<h4>towards a goal of <%= @project.goal %>.</h4>

<% if @project.user == current_user %>
<div class="Add reward">
  <%= link_to "Add Rewad", new_reward_path %>
</div>
<% end -%>

<% if logged_in? %> 
<%= form_for @pledge do |f| %>
<div class="field">
  <%= f.label :amount %><br>
  <%= f.text_field :amount %>
</div>

<%= f.hidden_field :project_id %>
<div class="actions"><%= f.submit "Pledge"%></div>
<% end %>
<% else %>
<p>You need to be logged in to make a pledge</p>
<% end %>


<% @project.comments.each do |comment| %>
<ul>
  <li><%= link_to comment.user.username, comment.user %> said:</li>

  <li><%= comment.comment %></li>
</ul>
</div>
<% end %>

<% if logged_in? %> 
<%= form_for @comment do |f| %>

<div class="field">
  <%= f.label :comment %><br>
  <%= f.text_field :comment %>
</div>

<%= f.hidden_field :project_id %>
<%= f.hidden_field :user_id, value: current_user.id %>
<div class="actions"><%= f.submit "Add Comment"%></div>
<% end %>
<% else %>
<h2>You have to be logged in to leave a comment</h2>
<% end %>
<% if @user == current_user %> 
<%= link_to 'Edit', edit_project_path(@project) %> |
<%= link_to 'Back', projects_path %>
<% end %>
